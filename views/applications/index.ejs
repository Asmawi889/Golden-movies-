<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Your Movies</title>
  </head>
  <body>
    <style>
      body {
        background-image: url('https://www.shutterstock.com/image-photo/cinema-blank-wide-screen-people-260nw-2314929885.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
    background-size: cover;
      }
      </style>

    <%- include('../partials/_navbar.ejs') %>
    <h1>Your Movies</h1>
      <div class="add-button">
    <a href="/users/<%= user._id %>/applications/new" class="button" id="add-button">+ Add a movie +</a>
  </div>
    <ul>
      <% applications.forEach( application => { %>
        <table>
          <td>
        <a href="/users/<%= user._id %>/applications/<%= application._id %>" class="button">
          <%=application.title %>
        </a>
      </td>
      </table>
      <% }) %>
    </ul>
 
  </body>
</html>
